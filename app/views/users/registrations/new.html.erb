<h2>新規会員登録</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <table>
    <thead>
      <th></th>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <tr>
        <td>名前</td>
        <td>
          <%= f.label :family_name, "姓" %>
          <%= f.text_field :family_name, autofocus: true, :placeholder => "田中" %>
        </td>
        <td>
          <%= f.label :family_name, "名" %>
          <%= f.text_field :first_name, autofocus: true, :placeholder => "花子" %>
        </td>
      </tr>
      <tr>
        <td>名前（フリガナ）</td>
        <td>
          <%= f.label :family_name_kana, "セイ" %>
          <%= f.text_field :family_name_kana, autofocus: true, :placeholder => "タナカ" %>
        </td>
        <td>
          <%= f.label :family_name_kana, "メイ" %>
          <%= f.text_field :first_name_kana, autofocus: true, :placeholder => "ハナコ" %>
        </td>
      </tr>
      <tr>
        <td><%= f.label :nickname, "ニックネーム" %></td>
        <td><%= f.text_field :nickname, autofocus: true %></td>
      </tr>
      <tr>
        <td><%= f.label :email, "メールアドレス" %></td>
        <td><%= f.email_field :email, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td><%= f.label :phone, "電話番号（ハイフンなし）" %></td>
        <td><%= f.text_field :phone, autofocus: true, :placeholder => "09012345678" %></td>
      </tr>
      <tr>
        <td><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
        <td><%= f.text_field :postal_code, autofocus: true, :placeholder => "1234567" %></td>
      </tr>
      <tr>
        <td><%= f.label :prefecture, "都道府県" %></td>
        <td><%= f.text_field :prefecture, autofocus: true %></td>
      </tr>
      <tr>
        <td><%= f.label :address_city, "住所" %></td>
        <td><%= f.text_field :address_city, autofocus: true %></td>
      </tr>
      <tr>
        <td><%= f.label :address_building, "ビル名・マンション名" %></td>
        <td><%= f.text_field :address_building, autofocus: true %></td>
      </tr>
      <tr>
        <td><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "登録する" %></td>
      </tr>
    </tbody>
  </table>
<% end %>
