<div class="row mt-3 mb-2">
  <div class="col-3 offset-2">
    <div class="flash-message">
      <%= flash[:notice] %>
    </div>
  </div>
</div>
<div class="row mt-3 mb-3">
  <div class="col-3 offset-3">
    <span class="title-background">マイページ</span>
  </div>
</div>

<div class="row">
  <div class="col-2 offset-2">
    <p class="mt-2 ml-4"><strong>登録情報</strong></p>
  </div>
  <div class="col-2">
    <%= link_to "編集する", edit_infomation_path(@user), class: "btn btn-info" %>
  </div>
</div>


<div class="row mt-3">
  <div class="col-6 offset-2">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td style="width: 25%">名前</td>
          <td><%= @user.family_name %><%= @user.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @user.family_name_kana %><%= @user.first_name_kana %></td>
        </tr>
        <tr>
          <td>ニックネーム</td>
          <td><%= @user.nickname %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @user.phone %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td>
            〠<%= @user.postal_code %><br>
            <%= @user.prefecture_code %><%= @user.address_city %><br>
            <%= @user.address_building %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

