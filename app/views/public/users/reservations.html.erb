<h1>現在の予約</h1>
<% if @reservations.blank? %>
  <p>予約はありません。</p>
<% else %>
  <% @reservations.each do |reservation| %>
    <%= attachment_image_tag reservation.salon_user, :salon_image %><br>
    <%= reservation.salon_user.salon_name %><br>
    〠<%= reservation.salon_user.postal_code %><br>
    <%= reservation.salon_user.prefecture %><%= reservation.salon_user.address_city %><%= reservation.salon_user.address_building %><br>
    来店日時：<%= reservation.day %>
    <%= reservation.time %><br>
    <%= link_to '詳細', salon_user_reservation_path(@salon_user, reservation) %><br>
  <% end %>
<% end %>

<h1>過去の予約</h1>
<% if @visit_historys.blank? %>
  <p>予約履歴はありません。</p>
<% else %>
  <% @visit_historys.each do |visit_history| %>
    <%= visit_history.salon_user.salon_image %>
    <%= visit_history.salon_user.salon_name %>
    <%= visit_history.day %>
    <%= visit_history.time %>
  <% end %>
<% end %>