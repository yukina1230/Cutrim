<div class="row">
  <div class="col-3 offset-7">
    <div class="search_form">
      <%= form_with url: search_posts_path, local: true, method: :get do |f| %>
        <%= f.text_field :dog_breed, :placeholder => "犬種を入力" %>
        <%= button_tag type: 'submit', class: "btn btn-info" do %>
          検索<i class="fas fa-search"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<% if @posts.exists? %>
  <div class="row">
    <div class="col-6 offset-5">
      <span class="title-background"><%= @search %>の検索結果</span>
    </div>
  </div>
  <%= render 'index', posts: @posts %>
<% else %>
  <p class="text-center h4"><%= @search %>の投稿はありません。</p>
<% end %>