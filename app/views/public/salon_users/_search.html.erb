<div class="row">
  <div class="col-3 offset-9">
    <div class="mt-3 mb-3">
      <%= link_to '現在地から検索する', map_salon_users_path, class: "btn btn-info" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-3 offset-9">
    <div class="mt-3 mb-3">
      <%= form_with url: search_salon_users_path, local: true, method: :get do |f| %>
        <%= f.collection_select :search, JpPrefecture::Prefecture.all, :name, :name %>
        <%= f.submit "検索", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>
