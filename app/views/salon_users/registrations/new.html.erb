<script type="text/javascript" src="//jpostal-1006.appspot.com/jquery.jpostal.js"></script>
<div class="row mt-3 mb-3">
  <div class="col-4 offset-2">
    <span class="title-background"><i class="fas fa-user-plus"></i>サロン様新規会員登録</span>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class="row">
  <div class="col-6 offset-3">
      <%= f.label :salon_name, "サロン名" %><span class="badge badge-danger">必須</span><br>
      <%= f.text_field :salon_name, autofocus: true, :size => "60*30" %><%= resource.errors.full_messages_for(:salon_name)[0] %>
  </div>
</div>
<div class="row">
  <div class="col-6 offset-3">
      <%= f.label :postal_code, "貴店郵便番号" %><span class="badge badge-danger">必須</span><br>
      <%= f.text_field :postal_code, autofocus: true, :placeholder => "123-4567", id: "salon_postal_code" %><%= resource.errors.full_messages_for(:postal_code)[0] %>
  </div>
</div>
<div class="row">
  <div class="col-6 offset-3">
      <%= f.label "貴店ご住所" %><span class="badge badge-danger">必須</span><br>
      <%= f.label :prefecture_code, "都道府県" %> <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }, id: "salon_prefecture" %><%= resource.errors.full_messages_for(:prefecture)[0] %><br>
      <%= f.label :address_city, "市区郡以下" %> <%= f.text_field :address_city, autofocus: true, id: "salon_address_city", :size => "60*30" %><%= resource.errors.full_messages_for(:address_city)[0] %><br>
      <%= f.label :address_building, "ビル・マンション名" %> <%= f.text_field :address_building, autofocus: true, :size => "60*30" %>
  </div>
</div>
<div class="row">
  <div class="col-6 offset-3">
      <%= f.label :phone, "貴店電話番号（ハイフンなし）" %><span class="badge badge-danger">必須</span><br>
      <%= f.text_field :phone, autofocus: true, :placeholder => "0120123456" %><%= resource.errors.full_messages_for(:phone)[0] %>
  </div>
</div>
<div class="row">
  <div class="col-6 offset-3">
      <%= f.label :email, "貴店メールアドレス" %><span class="badge badge-danger">必須</span><br>
      <%= f.email_field :email, autocomplete: "email", :size => "60*30" %><%= resource.errors.full_messages_for(:email)[0] %>
  </div>
</div>
<div class="row">
  <div class="col-6 offset-3">
      <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %><span class="badge badge-danger">必須</span><br>
      <%= f.password_field :password, autocomplete: "new-password" %><%= resource.errors.full_messages_for(:password)[0] %>
  </div>
</div>
<div class="row">
  <div class="col-6 offset-3">
      <%= f.label :password_confirmation, "パスワード(確認用)" %><span class="badge badge-danger">必須</span><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
</div>
<div class="row">
  <div class="col-6 offset-3">
    <%= f.submit "登録する", class: "btn btn-dark mt-2" %>
  </div>
</div>
<% end %>