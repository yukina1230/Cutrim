<h1>予約詳細</h1>
<table>
  <thead>
    <th>予約内容</th>
    <th></th>
  </thead>
  <tbody>
    <tr>
      <td>ご予約者様</td>
      <td><%= @reservation.user.family_name %><%= @reservation.user.first_name %>(<%= @reservation.user.family_name_kana %><%= @reservation.user.first_name_kana %>)</td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @reservation.user.phone %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td>
        〠<%= @reservation.user.postal_code %><br>
        <%= @reservation.user.prefecture %><%= @reservation.user.address_city %><br>
        <%= @reservation.user.address_building %>
      </td>
    </tr>
    <tr>
      <td>来店日時</td>
      <td><%= @reservation.day %><%= @reservation.time %></td>
    </tr>
    <tr>
      <td>メニュー</td>
      <td><%= @reservation.menu %></td>
    </tr>
  </tbody>
</table>
<table>
  <thead>
    <th>ペット情報</th>
    <th></th>
  </thead>
  <tbody>
    <tr>
      <td>名前</td>
      <td><%= @reservation.dog_name %></td>
    </tr>
    <tr>
      <td>犬種</td>
      <td><%= @reservation.dog_breed %></td>
    </tr>
    <tr>
      <td>性別</td>
      <td><%= @reservation.dog_gender %></td>
    </tr>
    <tr>
      <td>生年月日</td>
      <td><%= @reservation.dog_birth %></td>
    </tr>
  </tbody>
</table>
<table>
  <thead>
    <th>ご要望</th>
    <th></th>
  </thead>
  <tbody>
    <tr>
      <td>要望</td>
      <td><%= @reservation.request %></td>
    </tr>
    <tr>
      <td></td>
      <td>
        <% @reservation.reservation_images.each do |image| %>
          <%= attachment_image_tag image, :image, :fill, 200, 200 %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>